<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/premium_gradient_background"
    android:scrollbars="none"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="32dp"
        android:paddingTop="48dp"
        android:clipToPadding="false">

        <!-- Header Section with Glassmorphism Effect -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/glass_surface"
            app:strokeColor="#1A278FE5"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@drawable/glass_shimmer_overlay">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Actions"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:letterSpacing="0.02"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Streamline your productivity"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif"
                    android:alpha="0.8" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Enhanced Grid Layout with Staggered Animation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true">

            <!-- First Row: Add Task and Reminder with Floating Effect -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="20dp">

                <!-- Add Task Card with Advanced Styling -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAddTask"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="16dp"
                    app:cardBackgroundColor="@color/card_surface"
                    app:strokeColor="@color/brand_blue"
                    app:strokeWidth="2dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/premium_ripple_effect"
                    android:stateListAnimator="@animator/card_lift_animator">

                    <LinearLayout
                        android:layout_width="152dp"
                        android:layout_height="172dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="ðŸ“"
                            android:textSize="44sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:text="Add Task"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Create Reminder Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardCreateReminder"
                    android:layout_width="0dp"
                    android:layout_height="230dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="16dp"
                    app:cardBackgroundColor="@color/card_surface"
                    app:strokeColor="@color/brand_blue"
                    app:strokeWidth="2dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/premium_ripple_effect"
                    android:stateListAnimator="@animator/card_lift_animator">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:gravity="center_horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:text="ðŸ””"
                            android:textSize="44sp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="Reminder"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/text_primary"
                            android:gravity="center"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Second Row: Plan Week (Hero Card) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Plan Week Hero Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardPlanWeek"
                    android:layout_width="match_parent"
                    android:layout_height="172dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="12dp"
                    app:cardBackgroundColor="@color/card_surface"
                    app:strokeColor="@color/brand_blue"
                    app:strokeWidth="2dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/hero_ripple_effect"
                    android:stateListAnimator="@animator/hero_card_animator">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:gravity="center_horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:text="ðŸ“…"
                            android:textSize="44sp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="Plan Week"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/text_primary"
                            android:gravity="center"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Floating Action Indicators -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="24dp">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/dot_indicator_active"
                    android:layout_margin="4dp" />

                <View
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:background="@drawable/dot_indicator_inactive"
                    android:layout_margin="4dp" />

                <View
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:background="@drawable/dot_indicator_inactive"
                    android:layout_margin="4dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>

