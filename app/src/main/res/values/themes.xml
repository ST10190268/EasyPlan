<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EasyPlan" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Brand palette -->
        <item name="colorPrimary">@color/brand_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/brand_blue_light</item>

        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Buttons -->
        <item name="materialButtonStyle">@style/Widget.EasyPlan.Button.Primary</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.EasyPlan.Button.Outlined</item>

        <!-- Status bar / nav bar light content on white surfaces -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
    </style>

    <style name="Theme.EasyPlan" parent="Base.Theme.EasyPlan" />

    <!-- Custom button styles -->
    <style name="Widget.EasyPlan.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/button_primary_background</item>
        <item name="backgroundTint">@null</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">8dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Widget.EasyPlan.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:background">@drawable/button_outlined_background</item>
        <item name="backgroundTint">@null</item>
        <item name="strokeColor">@color/brand_blue</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/brand_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Custom input field style -->
    <style name="Widget.EasyPlan.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/brand_blue</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">3dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/input_hint</item>
    </style>

    <!-- Custom calendar theme -->
    <style name="CalendarViewCustom" parent="android:Widget.CalendarView">
        <item name="android:selectedWeekBackgroundColor">@color/brand_blue</item>
        <item name="android:focusedMonthDateColor">@color/text_primary</item>
        <item name="android:unfocusedMonthDateColor">@color/text_secondary</item>
        <item name="android:weekNumberColor">@color/brand_blue</item>
        <item name="android:weekSeparatorLineColor">@color/divider_light</item>
    </style>
</resources>